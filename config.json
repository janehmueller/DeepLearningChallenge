{
  "data_path": "/data/dl_lecture_data/TrainVal",
  "tmp_path": "tmp",
  "pretrained_models_path": "data/pretrained",

  "datasets": {
    "coco" : {
      "train":{
        "image_dir" : "train2014",
        "annotation_file" : "annotations/captions_train2014.json"
      },
      "validation":{
        "image_dir" : "val2014",
        "annotation_file" : "annotations/captions_val2014.json"
      }
    }
  },

  "selected_dataset": "coco",

  "files": {
    "pretrained": {
      "word_vectors": {
        "fasttext": {
          "path": "fasttext/wiki.en.vec",
          "embedding_size": 300,
          "uri": {
            "url": "https://s3-us-west-1.amazonaws.com/fasttext-vectors/wiki.en.vec",
            "type": "file"
          }
        },
        "glove": {
          "path": "glove/glove.42B.300d.txt",
          "embedding_size": 300,
          "uri": {
            "url": "http://nlp.stanford.edu/data/glove.42B.300d.zip",
            "type": "zip"
          }
        }
      }
    }
  },
  "model_hyper_params": {
    "metrics": [
      "accuracy",
      "categorical_accuracy"
    ]
  },
  "sizes": {
    "rnn_input": 300,
    "rnn_output": 300,
    "repeat_vector_length": 64,
    "dropout_rate": 0.4,
    "learning_rate": 0.005
  },
  "fit_params": {
    "epochs": 36,
    "max_queue_size": 32
  },
  "eos_token": "zeornd",
  "batch_size": 64,
  "image_input_num": 1000
}
